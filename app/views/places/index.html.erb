<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    <li data-target="#carousel-example-generic" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
        <%= image_tag 'yosemite.jpg' %>
      <div class="carousel-caption">
        Yosemite National Park
      </div>
    </div>
    <div class="item">
        <%= image_tag 'yellowstone.jpg' %>
      <div class="carousel-caption">
        Yellowstone National Park
      </div>
    </div>
        <div class="item">
        <%= image_tag 'zion.jpg' %>
      <div class="carousel-caption">
        Zion National Park
      </div>
    </div>
        <div class="item">
        <%= image_tag 'grandcanyon.jpg' %>
      <div class="carousel-caption">
        Grand Canyon National Park
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<% @places.each do |place| %>
  <div class="red_box col-xs-10 col-xs-offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1>
    <i class="address"><%= place.address %></i><br /><br />
    <p class="descrip"><%= place.description %></p>

    <% if place.user.present? %>
      <small><%= place.user.email %></small>
    <% end %>
<br style="clear:both;" />

<% if place.photos.present? %>
<div class="uploads pull-left">
<figure>
<%= image_tag place.photos.first.picture %>
<figcaption><%= place.photos.first.caption %></figcaption>
</figure>
</div>
  <% end %>

<% if place.comments.present? %>
      <div class="col-xs-12">
    <blockquote>
      <% if place.comments.first.humanized_rating.present? %>
        <b><%= place.comments.first.humanized_rating %></b> -
      <% end %>
      <%= place.comments.first.message %>
      <small><%= place.comments.first.user.email %></small>
    </blockquote>
  </div>
  <% end %>

  </div>
<% end %>

<br style="clear:both;" />

<div class="paginate_text">
<%= will_paginate @places %>
</div>